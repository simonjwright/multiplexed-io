---------------------------------------------------------------------
--  This is the main project file for building the spi1_mpu9250
--  demonstrator (the executable will be pcf8574a-adaracer or
--  pcf8574a-stm32f4 depending on the scenario variable RTS,
--  default adaracer).
---------------------------------------------------------------------

aggregate project PCF8574A_Build extends "../environment.gpr" is

   case RTS is
      when "adaracer" =>
         for Project_Path use ("../stm32f429x");
      when "stm32f4" =>
         for Project_Path use ("../stm32f40x");
   end case;

   for Project_Files use ("pcf8574a.gpr");

   package Builder is
      for Switches (others) use ("--create-map-file");
   end Builder;

end PCF8574A_Build;
